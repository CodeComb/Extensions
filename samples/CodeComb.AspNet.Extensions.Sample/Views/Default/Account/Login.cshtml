<h2>Login</h2>
<form asp-controller="Account" asp-action="Login" method="post">
    <table>
        <tr>
            <td>Username</td>
            <td><input type="text" name="username" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password" /></td>
        </tr>
        <tr>
            <td>Remember me?</td>
            <td><input type="checkbox" name="remember" /></td>
        </tr>
    </table>
    <p><input type="submit" /></p>
</form>